# FabManage-Clean Environment Variables
# Copy this file to .env.local and fill in your values

# ==============================================
# SUPABASE CONFIGURATION
# ==============================================

# Supabase Project URL
VITE_SUPABASE_URL=http://localhost:54321
SUPABASE_URL=http://localhost:54321

# Supabase Anon Key (public key)
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ==============================================
# AUTHENTICATION
# ==============================================

# JWT Secret (generate a secure random string)
JWT_SECRET=your_jwt_secret_here

# Session timeout in seconds (default: 3600 = 1 hour)
SESSION_TIMEOUT=3600

# ==============================================
# FIGMA INTEGRATION
# ==============================================

# Figma API Token (for design token synchronization)
FIGMA_API_TOKEN=your_figma_api_token_here

# Figma File Key (the file containing design tokens)
FIGMA_FILE_KEY=your_figma_file_key_here

# ==============================================
# EXTERNAL API INTEGRATIONS
# ==============================================

# Booking.com API (for accommodation module)
BOOKING_API_KEY=your_booking_api_key_here
BOOKING_API_URL=https://distribution-xml.booking.com/2.4/json

# Google Maps API (for logistics module)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ==============================================
# DEVELOPMENT & TESTING
# ==============================================

# Environment (development, staging, production)
NODE_ENV=development
VITE_NODE_ENV=development

# Debug mode
DEBUG=true
VITE_DEBUG=true

# API Base URL
VITE_API_BASE_URL=http://localhost:54321

# ==============================================
# FILE STORAGE
# ==============================================

# Max file upload size in bytes (default: 50MB)
MAX_FILE_SIZE=52428800

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,zip,rar

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

# SMTP Configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_here

# Email templates
EMAIL_FROM_NAME=FabManage-Clean
EMAIL_FROM_ADDRESS=noreply@fabmanage.com

# ==============================================
# MONITORING & ANALYTICS
# ==============================================

# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Google Analytics ID
GOOGLE_ANALYTICS_ID=your_ga_id_here

# ==============================================
# SECURITY
# ==============================================

# Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# ==============================================
# DATABASE
# ==============================================

# Database connection string (for direct connections)
DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres

# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# ==============================================
# CACHE
# ==============================================

# Redis URL (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Cache TTL in seconds
CACHE_TTL=3600

# ==============================================
# FEATURE FLAGS
# ==============================================

# Enable/disable features
FEATURE_REAL_TIME=true
FEATURE_FILE_UPLOAD=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_ANALYTICS=false

# ==============================================
# EXTERNAL SERVICES
# ==============================================

# Slack Webhook URL for notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Discord Webhook URL for notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================

# Storybook URL
STORYBOOK_URL=http://localhost:6006

# Playwright test results
PLAYWRIGHT_TEST_RESULTS=test-results

# Coverage reports
COVERAGE_REPORTS=coverage

# ==============================================
# DEPLOYMENT
# ==============================================

# Production URLs
PRODUCTION_URL=https://fabmanage-clean.com
STAGING_URL=https://staging.fabmanage-clean.com

# CDN URL for static assets
CDN_URL=https://cdn.fabmanage-clean.com

# ==============================================
# BACKUP & RECOVERY
# ==============================================

# Backup configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your_backup_bucket_here
BACKUP_S3_REGION=eu-west-1

# ==============================================
# LOGGING
# ==============================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE=logs/app.log

# Log rotation
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ==============================================
# PERFORMANCE
# ==============================================

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Performance thresholds
PERFORMANCE_THRESHOLD_RESPONSE_TIME=1000
PERFORMANCE_THRESHOLD_MEMORY_USAGE=80

# ==============================================
# NOTIFICATIONS
# ==============================================

# Push notification service
PUSH_SERVICE_KEY=your_push_service_key_here

# Webhook endpoints for external integrations
WEBHOOK_PROJECT_CREATED=your_webhook_url_here
WEBHOOK_PROJECT_UPDATED=your_webhook_url_here
WEBHOOK_PROJECT_COMPLETED=your_webhook_url_here

# ==============================================
# INTEGRATION TESTING
# ==============================================

# Test database URL
TEST_DATABASE_URL=postgresql://postgres:password@localhost:54323/test_db

# Test file upload directory
TEST_UPLOAD_DIR=./test-uploads

# Mock external services
MOCK_EXTERNAL_APIS=true

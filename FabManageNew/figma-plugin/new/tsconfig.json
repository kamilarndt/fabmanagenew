{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2017"
    ],
    "module": "none",
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "code.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}